<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="postFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/postfrag_imageview"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:id="@+id/postfrag_desc"
        android:layout_below="@+id/postfrag_imageview"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/postfrag_upvote"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_thumb_up"
        android:layout_alignTop="@+id/postfrag_upCount"
        android:layout_alignStart="@+id/postfrag_imageview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/postfrag_upCount"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/postfrag_desc"
        android:layout_toEndOf="@+id/postfrag_upvote"
        />



</RelativeLayout>